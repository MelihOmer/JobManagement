@model TodoDetailsWithTodoCommentsModel

<form method="post" asp-action="ResolutionTodo" asp-controller="Home">
    <input asp-for="@Model.TodoAssignDto.OldUserId" style="display:none;" />
    <input asp-for="@Model.TodoAssignDto.TodoId" style="display:none;" />
    <div class="modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bildirimi Ata</h5>
                <button type="button" class="close btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row p-1">
                    <label class="fw-bold">Atama Notu :</label><br />
                    <textarea asp-for="@Model.TodoAssignDto.AssignNote" class="form-control border-info" id="ResolutionNote"></textarea>
                </div>
                <div class="row">
                    <label class="fw-bold">Atanan Kullanıcı :</label>
                    <select asp-for="@Model.TodoAssignDto.NewUserId" asp-items="@Model.UserList" class="form-select">
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-outline-success" asp-action="AssignTodo" asp-controller="Home">Bildirimi Ata</button>
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</form>