@model AppUserLoginDto
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Portal - Giriş Yap</title>
    <link href="~/theme/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class=" mt-5 py-5" style="background: linear-gradient(180.3deg, rgb(221, 221, 221) 5.5%, rgb(110, 136, 161) 90.2%);">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5" style="background: linear-gradient(to top, #dfe9f3 0%, white 100%);">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4"><i class="fa-solid fa-user-lock fa-2xl mx-3"></i>Kullanıcı Girişi</h3></div>
                                <div class="card-body">
                                    <form asp-action="Login" asp-controller="Account" method="post">
                                        <input asp-for="ReturnUrl" type="hidden" class="form-control" />
                                        
                                        <div class="form-floating mb-3">
                                            <input class="form-control" type="text" placeholder="Kullanıcı Adı"  asp-for="UserName"/>
                                            <label asp-for ="UserName">Kullanıcı Adı</label>
                                            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control"  type="password" placeholder="Şifre" asp-for="Password"/>
                                            <label asp-for="Password">Şifre</label>
                                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" value="true" asp-for="@Model.RememberMe" />
                                            <label class="form-check-label" asp-for="@Model.RememberMe">Beni Hatırla</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="password.html"></a>
                                            <button class="btn btn-outline-success" type="submit"><i class="fa-solid fa-lock-open mx-2"></i>Giriş Yap</button>
                                        </div>
                                        
                                    </form>
                                    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="#" class="text-danger">Kullanıcız Yoksa Bilgi İşlem İle İrtibata Geçiniz</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"  crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>
