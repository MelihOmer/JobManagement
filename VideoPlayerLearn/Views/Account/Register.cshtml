@model AppUserCreateDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Portal - Register</title>
    <link href="css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Kullanıcı Oluştur</h3></div>
                                <div class="card-body">
                                    <form asp-action="Register" asp-controller="Account" class="form mb-3">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for=@Model.FirstName type="text" placeholder="Ad" />
                                                    <label asp-for="@Model.FirstName">Ad </label>
                                                    <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input class="form-control" asp-for=@Model.LastName type="text" placeholder="Soyad" />
                                                    <label asp-for="@Model.LastName">Soyad</label>
                                                </div>
                                                <span class="text-danger" asp-validation-for="@Model.LastName"></span>
                                            </div>
                                        </div>
                                        <div class="row mb-3 ">
                                            <div class=" col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for=@Model.Email type="email" placeholder="name@example.com" />
                                                    <label asp-for="@Model.Email">Email Adresi</label>
                                                    <span class="text-danger" asp-validation-for="@Model.Email"></span>
                                                </div>
                                            </div>
                                            <div class=" col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for=@Model.UserName type="text" placeholder="Kullanıcı Adı" />
                                                    <label asp-for="@Model.UserName">Kullanıcı Adı</label>
                                                    <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for=@Model.Password type="password" placeholder="Şifre" />
                                                    <label asp-for="@Model.Password">Şifre</label>
                                                    <span class="text-danger" asp-validation-for="@Model.Password"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for=@Model.ConfirmPassword type="password" placeholder="Şifre Tekrar" />
                                                    <label asp-for="@Model.ConfirmPassword">Şifre Tekrar</label>
                                                    <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><button class="btn btn-primary btn-block" type="submit" asp-action="Register" asp-controller="Account">Create Account</button></div>
                                        </div>
                                    </form>
                                    <div class="text-danger mt-2" asp-validation-summary="All"></div>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="#">Kullanıcız Yoksa Bilgi İşlem İle İletişime Geçiniz</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>
